      <br />
      <br />
      <br />
      <br />
      <OwnWords />
      <a href="https://my.usepow.app/signup/" class="no-underline mb-64 font-semibold text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800">YES TO YOUR OWN WORDS</a>
      <br />
      <br />
      <br />
      <br />
      <PersonalCycle />
      <a href="https://my.usepow.app/signup/" class="no-underline mb-64 font-semibold text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800">TAKE CHARGE</a>
      <br />
      <br />
      <br />
      <br />
      <PlansPricing />
      <a href="https://my.usepow.app/signup/" class="no-underline mb-64 font-semibold text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800">GET STARTED</a>
      <br />
      <br />
      <br />
      <br />
      <News />
      <Form />
      <br />
      <Image class="mb-8" src={localPOWkeyImage}  alt="Queen Raae plus two friends holding props: key, lock and logo." />
