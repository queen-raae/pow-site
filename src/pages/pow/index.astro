---
import Layout from "../../layouts/Layout.astro";
import { Content as Private } from "./your-private-data.md";
import { Content as OwnWords } from "./own-words.md";
import { Content as PersonalCycle } from "./personal-cycle.md";
import { Content as PlansPricing } from "./plans-pricing.md";
import { Content as About } from "./about.md";
import { Content as Talk } from "./the-talk.md";
import { Content as News } from "./newsletter.md";

import { Image } from 'astro:assets';
import localPOWfamilyImage from '../../images/pow-family.jpg';
import localPOWgangImage from '../../images/pow-gang.jpg';
import localPOWkeyImage from '../../images/pow-key-lock.jpg';
import localPOWYOUTUBE from '../../images/pow-youtube.jpg';
