---
import { Image } from "astro:assets";
import localPOWImage from "../images/logo.png";
import Form from "../components/NewsletterForm.astro";
import Layout from "../layouts/Layout.astro";
---

<footer
  class="bg-gradient-to-b from-yellow-400 to-orange-400 flex grid sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 py-4 px-4"
>
  <section class="max-w-xl py-1">
    <p class="py-0 text-base font-normal">Made with ❤</p>
    <p class="py-0 text-base font-normal">
      by
      <a
        class="text-slate-600 underline-offset-1"
        href="https://x.com/raae"
        target="_blank">@raae</a
      >

      and family.
    </p>
    <br />
  </section>

  <section>
    <p class="py-0 text-base font-normal">Sign up for the</p>
    <a href="#" class="py-0 text-base font-normal">POW! Newsletter</a>
    <br />
    <br />
  </section>

  <section class="md:text-right lg:text-right xl:text-right">
    <a
      class="py-0 text-slate-600 text-base font-normal"
      href="mailto:hello@usepow.app">hello@usepow.app</a
    >
    <p class="py-0 text-base font-normal">Tromsøgata 26, 0565</p>
    <p class="py-0 text-base font-normal">Oslo, Norway</p>
    <br />
  </section>
</footer>
